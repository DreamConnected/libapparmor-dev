  # abstraction for Enchant spellchecking frontend

  @{system_share_dirs}/enchant/                              r,
  @{system_share_dirs}/enchant/enchant.ordering              r,

  # aspell
  #include <abstractions/aspell>
  /var/lib/dictionaries-common/aspell/             r,
  /var/lib/dictionaries-common/aspell/*            r,

  # hspell
  @{system_share_dirs}/hspell/                               r,
  @{system_share_dirs}/hspell/*.wgz.*                        r,

  # hunspell
  @{system_share_dirs}/hunspell/                             r,
  @{system_share_dirs}/hunspell/*                            r,

  # ispell
  /usr/lib/ispell/                                 r,
  /usr/lib/ispell/*.hash                           r,
  @{system_share_dirs}/dict/                                 r,
  @{system_share_dirs}/dict/*                                r,
  /var/lib/dictionaries-common/                    r,
  /var/lib/dictionaries-common/{ispell,wordlist}/  r,
  /var/lib/dictionaries-common/{ispell,wordlist}/* r,

  # myspell
  @{system_share_dirs}/myspell/                              r,
  @{system_share_dirs}/myspell/**                            r,

  # voikko
  /usr/lib/voikko/                                 r,
  /usr/lib/voikko/2/                               r,
  /usr/lib/voikko/2/mor-standard/                  r,
  /usr/lib/voikko/2/mor-standard/voikko*           r,

  # zemberek
  @{system_share_dirs}/java/                                 r,
  @{system_share_dirs}/java/zemberek-[0-9]*.jar              r,
  @{system_share_dirs}/java/zemberek-tr-[0-9]*.jar           r,

  # per-user dictionaries
  owner @{HOME}/.config/enchant/                   rw,
  owner @{HOME}/.config/enchant/*                  rwk,
