abi <abi/4.0>,

include <tunables/global>

profile ssh-agent /usr/bin/ssh-agent {
  include <abstractions/base>
  include <abstractions/consoles>
  include <abstractions/nameservice-strict>

  capability setgid,

  # Network access for ssh-keyscan
  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,

  signal (receive) set=(term),

  # Enable commands to run as a subprocess by ssh-agent
  file mrix /usr/bin/dash,
  file mrix /usr/bin/bash,

  # Common commands run as a subprocess by ssh-agent
  file Px /usr/bin/gpg-agent,
  file Px /usr/bin/ssh-keygen,
  file Pix /usr/bin/ssh-add,
  file Pix /usr/bin/ssh-keyscan,

  # Common SSH file locations
  file rw @{etc_rw}/ssh/{,**},
  owner r @{HOME}/.ssh/{,**},
  owner w @{HOME}/.xsession-errors,
  owner rw @{run}/user/@{uid}/keyring/.ssh,
  owner rw @{run}/user/@{uid}/openssh_agent,
  owner w @{run}/user/@{uid}/ssh-agent.[0-9a-zA-Z][0-9a-zA-Z][0-9a-zA-Z][0-9a-zA-Z][0-9a-zA-Z][0-9a-zA-Z],
  owner w @{run}/user/@{uid}/gcr/.ssh,

  # UNIX-domain sockets 
  owner rw /tmp/ssh-[0-9a-zA-Z][0-9a-zA-Z][0-9a-zA-Z][0-9a-zA-Z][0-9a-zA-Z][0-9a-zA-Z][0-9a-zA-Z][0-9a-zA-Z][0-9a-zA-Z][0-9a-zA-Z][0-9a-zA-Z][0-9a-zA-Z]/{,**},

  # Allow executable mapping and read for the binary
  file mr /usr/bin/ssh-agent,

  # Site-specific additions and overrides. See local/README for details.
  include if exists <local/ssh-agent>
}
