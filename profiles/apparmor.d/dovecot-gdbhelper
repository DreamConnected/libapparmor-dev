# vim: ft=apparmor

abi <abi/3.0>,

include <tunables/global>
include <tunables/dovecot>

profile dovecot-gdbhelper /usr/lib/dovecot/gdbhelper {
  include <abstractions/base>
  include <abstractions/dovecot-common>

  capability setuid,

  network unix stream,

  owner /tmp/dovecot.gdbhelper.* rw,

  /usr/lib/dovecot/gdbhelper rm,

  # Site-specific additions and overrides. See local/README for details.
  include if exists <local/usr.lib.dovecot.gdbhelper>
}